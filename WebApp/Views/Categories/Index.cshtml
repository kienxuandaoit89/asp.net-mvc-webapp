@model List<Category>;


@{
   ViewBag.Title = "Categories";
}

@section mainTitle {
   <h3>Categories</h3>

}


@if (Model != null && Model.Count > 0)
{
   <table class="table table-striped">
   <thead>
      <tr>
         <th>#</th>
         <th>Name</th>
         <th>Description</th>
         <th>Action</th>
         <th>Action</th>
      </tr>
   </thead>

   <tbody>
      @{
            int i = 1;
            @foreach (var category in Model)
            {
               <tr>
                  <td> @(i++) </td>
                  <td>@category.Name</td>
                  <td>@category.Description</td>
                  <td>
                     <a asp-controller="categories" asp-action="edit" asp-route-id="@category.CategoryId"
                        class="btn btn-primary">Edit</a>
                  </td>
                  <td>
                     <a class="btn btn-danger" asp-controller="categories" asp-action="delete"
                        asp-route-id="@category.CategoryId" onclick="return confirmDelete()">Delete</a>
                  </td>
               </tr>


            }
         }
      </tbody>
   </table>
   <div class="mt-5">
   <a asp-controller="categories" asp-action="add" class="btn btn-primary">Add</a>
</div>

   @section scripts {
   <script>
      const confirmDelete = () => {
         return confirm("Are you sure you want to delete this category?");
      }
   </script>
}

}